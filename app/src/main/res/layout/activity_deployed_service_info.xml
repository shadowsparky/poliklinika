<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeployedServiceInfoActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/app_bar_main"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:layout_gravity="center">
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_margin="16dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/DeployedServiceIdTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Номер услуги: "
                    android:textSize="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/DeployedServicePacientTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Пациент: "
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/DeployedServiceIdTV" />

                <TextView
                    android:id="@+id/DeployedServiceCabinetTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Кабинет: "
                    android:textSize="18dp"
                    app:layout_constraintTop_toBottomOf="@+id/DeployedServicePacientTV" />

                <TextView
                    android:id="@+id/DeployedServiceNameTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Услуга: "
                    android:textSize="18dp"
                    app:layout_constraintTop_toBottomOf="@+id/DeployedServiceCabinetTV" />

                <TextView
                    android:id="@+id/DeployedServiceCostTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Стоимость: "
                    android:textSize="18dp"
                    app:layout_constraintTop_toBottomOf="@+id/DeployedServiceNameTV"></TextView>

                <TextView
                    android:id="@+id/DeployedServiceTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Время: "
                    android:textSize="18dp"
                    app:layout_constraintTop_toBottomOf="@+id/DeployedServiceCostTV"></TextView>

                <TextView
                    android:id="@+id/DeployedServiceDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Дата: "
                    android:textSize="18dp"
                    app:layout_constraintTop_toBottomOf="@+id/DeployedServiceTime"></TextView>
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

    </FrameLayout>

</android.support.constraint.ConstraintLayout>